{
    "compilerOptions": {
        "strict": true,
        "newLine": "lf",
        "baseUrl": "src",
        "outDir": "dist",
        "lib": ["ESNext"],
        "target": "ES2020",
        "module": "CommonJS",
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "downlevelIteration": true,
        "moduleResolution": "Node",
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src"]
}
